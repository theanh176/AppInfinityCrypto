<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WatchListActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginBottom="100dp"
                android:fontFamily="@font/svn_gilroy_medium"
                android:gravity="center"
                android:text="Start follow your crypto portfolio"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <Button
                android:id="@+id/btnSignInnot"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_radius"
                android:backgroundTint="@color/colorBlueLogin"
                android:fontFamily="@font/svn_gilroy_medium"
                android:text="Sign In"
                android:textColor="@color/white"
                android:textSize="20dp">

            </Button>

            <Button
                android:id="@+id/btnSignUpnot"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border_radius"
                android:backgroundTint="#ECE7E7"
                android:fontFamily="@font/svn_gilroy_medium"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:textSize="20dp">

            </Button>
        </TableLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="187dp"
        android:layout_height="153dp"
        android:layout_marginStart="112dp"
        android:layout_marginEnd="112dp"
        android:src="@drawable/a_removebg_preview"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>