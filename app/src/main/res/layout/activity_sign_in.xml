<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBackground"
    tools:context=".SignIn">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="109dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/svn_gilroy_bold"
            android:gravity="left"
            android:text="Sign In"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="normal">

        </TextView>

        <TableRow

            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/svn_gilroy_medium"
                android:gravity="left"
                android:text="Don't have an account?"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/svn_gilroy_medium"
                android:gravity="left"
                android:text="Sign Up"
                android:textColor="@color/colorBlueLogin"
                android:textSize="18dp"
                android:textStyle="bold">

            </TextView>
        </TableRow>

        <TableLayout

            android:layout_marginLeft="6dp"
            android:layout_marginBottom="20dp">

            <TableRow>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_person" />

                <EditText
                    android:id="@+id/editTextTextPersonName4"
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/svn_gilroy_medium"
                    android:hint="@string/Username"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="20dp"
                    tools:ignore="TouchTargetSizeCheck" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="49dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_lock" />

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="316dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/svn_gilroy_medium"
                    android:hint="@string/Password"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="20dp"
                    tools:ignore="TouchTargetSizeCheck" />

            </TableRow>
        </TableLayout>

        <TableLayout

            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/svn_gilroy_medium"
                android:gravity="left"
                android:text="Forgot Password?"
                android:textColor="@color/colorBlueLogin"
                android:textSize="18dp"
                android:textStyle="bold">

            </TextView>


        </TableLayout>


        <Button
            android:layout_width="412dp"
            android:layout_height="59dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/colorBlueLogin"
            android:fontFamily="@font/svn_gilroy_medium"
            android:text="Sign In"
            android:textColor="@color/white"
            android:textSize="20dp">

        </Button>

        <TableLayout>

            <TableRow
                android:layout_height="58dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="49dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/google_new_g_icon" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="54dp"
                    android:layout_height="69dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/facebook_icon" />

            </TableRow>
        </TableLayout>

        <TableLayout android:layout_marginTop="10dp">

            <TableRow
                android:layout_height="58dp"
                android:layout_marginRight="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_fingerprint" />


            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/svn_gilroy_medium"
                android:gravity="center"
                android:text="Touch ID"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>
        </TableLayout>

        <!--        <TableLayout>-->

        <!--            <TextView-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:fontFamily="@font/svn_gilroy_medium"-->
        <!--                android:gravity="center"-->
        <!--                android:text="Infinity Crypto - 1.1.1"-->
        <!--                android:textColor="@color/white"-->
        <!--                android:textSize="20dp"-->
        <!--                android:textStyle="normal"></TextView>-->
        <!--        </TableLayout>-->


    </TableLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/svn_gilroy_medium"
        android:gravity="center"
        android:text="Infinity Crypto - 1.1.1"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>