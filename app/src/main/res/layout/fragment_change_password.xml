<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_change_password_profile"
    android:background="#1b222f"
    tools:context=".Fragment.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="683dp"
        android:padding="20dp"
        android:orientation="vertical">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="224dp">

            <ImageView
                android:id="@+id/btnBackPassProChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:baselineAligned="false"
                android:fontFamily="@font/svn_gilroy_bold"
                android:gravity="center"
                android:text="Change Password"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/tableRow2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/labelOldPasswordProfile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="Current Password"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelChangePasswordProfile" />

            <EditText
                android:id="@+id/editOldPasswordProfile"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorGrey"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toStartOf="@+id/labelOldPasswordProfile"
                app:layout_constraintTop_toBottomOf="@+id/labelChangePasswordProfile" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="462dp">

            <TextView
                android:id="@+id/labelNewPasswordProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:layout_marginRight="55dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelChangePasswordProfile" />

            <EditText
                android:id="@+id/editNewPasswordProfile"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorGrey"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toStartOf="@+id/labelOldPasswordProfile"
                app:layout_constraintTop_toBottomOf="@+id/labelChangePasswordProfile" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableRow2">

            <TextView
                android:id="@+id/labelReenterPasswordProfile"
                android:layout_width="wrap_content"
                android:text="Reenter Password"
                android:textColor="@color/white"
                android:layout_marginRight="26dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelChangePasswordProfile" />

            <EditText
                android:id="@+id/editReenterPasswordProfile"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorGrey"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toStartOf="@+id/labelOldPasswordProfile"
                app:layout_constraintTop_toBottomOf="@+id/labelChangePasswordProfile" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableRow2">

            <Button
                android:id="@+id/btnSavePassProChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_radius"
                android:backgroundTint="@color/colorBlueLogin"
                android:fontFamily="@font/svn_gilroy_medium"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="20dp">

            </Button>


        </TableRow>
    </LinearLayout>


</LinearLayout>