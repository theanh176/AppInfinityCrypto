<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBackground"
    tools:context=".ForgotPassword">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/svn_gilroy_medium"
        android:gravity="center"
        android:text="Infinity Crypto - 1.1.1"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TableLayout
        android:layout_width="354dp"
        android:layout_height="582dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBackSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="285dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:baselineAligned="false"
                android:fontFamily="@font/svn_gilroy_bold"
                android:gravity="center"
                android:text="Forgot Password"
                android:textColor="@color/white"
                android:textSize="30dp" />

        </TableRow>

        <TableLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="285dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="40dp"
                android:baselineAligned="false"
                android:fontFamily="@font/svn_gilroy_medium"
                android:gravity="left"
                android:text="Please enter your phone number or email to reset your password"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="285dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="10dp"
                android:baselineAligned="false"
                android:fontFamily="@font/svn_gilroy_medium"
                android:gravity="left"
                android:text="PHONE OR EMAIL"
                android:textColor="@color/colorGrey"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="40dp"
                android:background="@color/colorBlueDark"
                android:hint="Enter the Phone or Email"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/colorGrey" />
        </TableLayout>

        <Button
            android:layout_width="412dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorBlueLogin"
            android:fontFamily="@font/svn_gilroy_medium"
            android:text="Forgot Password"
            android:textColor="@color/white"
            android:textSize="20dp">

        </Button>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>